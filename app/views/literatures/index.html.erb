<div class="d-flex align-items-center">
  <p id="notice"><%= notice %></p>
  <h1>文献一覧</h1>
    <div class="ml-auto boards__linkBox">
      <%= link_to "新規作成", new_literature_path, class: "btn btn-outline-dark" %>
    </div>
</div>
<% if flash[:notice] %>
  <div class="alert alert-danger"><%= flash[:notice] %></div>
<% end %>
<table class="table table-hover literatures__table">
  <thead class="thead-dark">
    <tr>
       <!-- <th>ID</th> -->
      <th>著者</th>
      <!-- <th>タイトル/論文/記事名</th> -->
      <th>タイトル</th>
      <th>巻号</th>
      <th>頁</th>
      <th>URL</th>
      <!-- <th>出版年/掲載年</th> -->
      <th>出版年</th>
      <!-- <th>出版社/サイト名</th> -->
      <th>出版社</th>
      <th>金額</th>
      <th>状態</th>
      <!-- <th>検索キーワード</th> -->
      <th>検索キー</th>
      <!-- <th>備考/要約</th>ｓ -->
      <th>備考</th>
      <!-- <th>作成日</th>
      <th>更新日</th> -->
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @literatures.each do |literature| %>
      <tr>
        <td><%= literature.author.truncate(30) %></td>
        <td><%= literature.title.truncate(30) %></td>
        <td><%= literature.volume %></td>
        <td><%= literature.page %></td>
        <td><%= link_to "#{literature.url.truncate(30)}","#{literature.url}" %></td>
        <td><%= literature.published %></td>
        <td><%= literature.publish %></td>
        <td><%= literature.price %></td>
        <td><%= literature.state %></td>
        <td><%= literature.keyword %></td>
        <td><%= literature.remarks.truncate(10) %></td>

        <td><%= link_to '詳細', literature, class: 'btn btn-outline-dark' %></td>
        <td><%= link_to '編集', edit_literature_path(literature), class: 'btn btn-outline-dark'%></td>
        <td><%= link_to '削除', literature,class: 'btn btn-outline-dark',
           method: :delete, data: { confirm: 'Are U sure?' } %></td>


      </tr>
    <%  end %>
  </tbody>
</table>
<%= paginate @literatures %>
