<!-- <h4>文献一覧</h4> -->
<%= @current_user.id %>|
<%= @current_user.name %>|
<%= @current_user.administrator %>
<div class="d-flex align-items-center">

  <%= form_with(url: :search_literatures, method: :get, local: true) do  %>
    <%= text_field_tag "q", params[:q] %>
    <%= submit_tag '検索', class: "btn btn-outline-info btn-sm" %> <%= link_to 'Clear', literatures_path %>
  <% end %>

  <div class="ml-auto literatures__linkBox">
    <%= link_to "新規作成", new_literature_path, class: "btn btn-outline-dark" %>
    <%#= link_to "CSV出力", csv_output_literatures_path(format: :csv), class: "btn btn-primary" %>
    <%= link_to "CSV出力", literatures_path(format: :csv), name: 'csv_output', class: "btn btn-primary" %>
  </div>
</div>

<table class="table table-hover literatures__table">
  <thead class="thead-light">
    <tr>
      <th>著者</th>
      <th>タイトル</th>
      <th>号</th>
      <th>頁</th>
      <th>URL</th>
      <th>年</th>
      <th>出版社/サイト名</th>
      <th>金額</th>
      <th>状態</th>
      <th>キーワード</th>
      <th>備考/要約</th>
      <th>user_id</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @literatures.each do |literature| %>
      <!-- <tr class="no-line-feed"> -->
      <tr>
        <td><%= literature.author.truncate(10) %></td>
        <td><%= literature.title.truncate(20) %></td>
        <td><%= literature.volume %></td>
        <td><%= literature.page %></td>
        <td><%= link_to "#{literature.url.truncate(20)}","#{literature.url}" %></td>
        <td><%= literature.published %></td>
        <td><%= literature.publish.truncate(20) %></td>
        <td><%= literature.price %></td>
        <td><%= literature.state %></td>
        <td><%= literature.keyword.truncate(10) %></td>
        <td><%= literature.remarks.truncate(10) %></td>
        <td><%= literature.user_id %></td>
        <td><%= link_to '詳細', literature, class: 'btn btn-outline-dark btn-sm' %></td>
        <td><%= link_to '編集', edit_literature_path(literature), class: 'btn btn-outline-dark btn-sm'%></td>
        <td><%= link_to '削除', literature,class: 'btn btn-outline-danger btn-sm',
           method: :delete, data: { confirm: '本当に削除しますか?' } %></td>
      </tr>
    <%  end %>
  </tbody>
</table>
<%= paginate @literatures %>
