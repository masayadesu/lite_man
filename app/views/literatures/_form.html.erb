<% if flash[:error_messages]  %>
  <div class="alert alert-danger">
    <ul>
      <% flash[:error_messages].each do |msg|  %>
        <li><%= msg %></li>
      <% end %>
    <ul>
  </div>
<% end %>

<%= form_with model: literature do |f| %>
   <div class="form-group">
     <%= f.label :author, '著者' %>
     <%= f.text_field :author, class: 'form-control' %>
   </div>
   <div class="form-group">
     <%= f.label :title, 'タイトル/論文/記事名' %>
     <%= f.text_field :title, class: 'form-control' %>
   </div>
   <div class="form-group">
     <%= f.label :volume, '巻号' %>
     <%= f.text_field :volume, class: 'form-control' %>
   </div>
   <div class="form-group">
     <%= f.label :page, '頁' %>
     <%= f.text_field :page, class: 'form-control' %>
   </div>
   <div class="form-group">
     <%= f.label :url, 'URL' %>
     <%= f.text_field :url, class: 'form-control' %>
   </div>
   <div class="form-group">
     <%= f.label :published, '出版年/掲載年' %>
     <%= f.month_field :published, class: 'form-control'%>
   </div>
   <div class="form-group">
     <%= f.label :publish, '出版社/サイト名' %>
     <%= f.text_field :publish, class: 'form-control' %>
   </div>
   <div class="form-group">
     <%= f.label :price, '金額' %>
     <%= f.text_field :price, class: 'form-control' %>
   </div>
   <div class="form-group">
     <%= f.label :state, '状態' %>
     <%= f.text_field :state, class: 'form-control' %>
   </div>
   <div class="form-group">
     <%= f.label :keyword, '検索キーワード' %>
     <%= f.text_field :keyword, class: 'form-control' %>
   </div>
   <div class="form-group">
     <%= f.label :remarks, '備考/要約' %>
     <%= f.text_area :remarks, class: 'form-control',rows: 10 %>
   </div>
   <%= f.submit '保存', class: 'btn btn-primary' %>
<% end %>
