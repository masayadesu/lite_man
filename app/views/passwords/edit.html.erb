<% provide(:title, "パスワードの変更") %>
<div class="form_box  col-sm-6">
  <h2>パスワードの変更</h2>
  <div><%= link_to "マイアカウントに戻る", :account, class: 'nav-link float-right' %></div>
  <%= form_for @user, as: "account", url: :password do |form| %>
    <div class="form-group">
      <%= form.label :current_password, '現在のパスワード' %>
      <%= form.password_field :current_password, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :password, '新しいパスワード' %>
      <%= form.password_field :password, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :password_confirmation, '新しいパスワードの確認' %>
      <%= form.password_field :password_confirmation, class: 'form-control' %>
    </div>
    <%= form.submit '変更', class: 'btn btn-primary' %>
  <% end %>
</div>
